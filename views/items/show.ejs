
<a href="/list/<%=listId%>/share" class="btn btn-success pull-right">Share this list with another user</a>
<h1>My Family Grocery List <%=listId%></h1>
<h3>To see nutritions values for the items you are adding to the list, please write the items you are adding in plain english, whole word, singular</h3>
<a href="/item/addItem/<%=listId%>" class="btn btn-success">Add Item</a>

<% items.forEach(function(item) { %>
<div class="well">
    <h2><a href="/item/<%= item.itemName %>"><%= item.itemName %></a>
    <small><%= item.amount %></small>
    <!-- <small><%= item.userId %></small> -->
  </h2>
  <a href="/item/edit/<%= item.itemName %>" class="btn btn-info glyphicon glyphicon-edit"> Edit amount</a>
  <a href="/list/<%=listId%>" deleteUrl="/item/<%=item.itemName%>" class="btn btn-danger glyphicon glyphicon-trash delete-btn"></a>
  
</div>
<% }); %>


