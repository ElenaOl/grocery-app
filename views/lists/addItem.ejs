<h1>Add new item to your list <%=listId%></h1>

<form action="/item/<%=listId%>" method="POST" autocomplete="on">
  <div class="form-group">
    <label for="itemName">Item name</label>
    <input type="text" class="form-control" id="itemName" name="itemName" required>
  </div>

  <div class="form-group">
    <label for="amount">Amount</label>
    <textarea type="integer" class="form-control" id="amount" name="amount" autocomplete="off" required></textarea>
  </div>

  <input type="submit" class="btn btn-primary">
</form>

